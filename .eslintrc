{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],

  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React", // Pragma to use, default to "React"
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["react"],

  "rules": {
    "no-case-declarations": 0,
    "react/prop-types": 0
  }
}
